<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset
		addrulepath="/administrator/components/com_vm_product_comparisons/models/rules"
		addfieldpath="/administrator/components/com_vm_product_comparisons/models/fields"
		name="global_config"
		label="COM_VM_PRODUCT_COMPARISONS_CONFIG_GLOBAL_LABEL"
		description="COM_VM_PRODUCT_COMPARISONS_CONFIG_GLOBAL_DESC">
		<field
			name="check_in"
			type="list"
			default="0"
			label="COM_VM_PRODUCT_COMPARISONS_CONFIG_CHECK_TIMER_LABEL"
			description="COM_VM_PRODUCT_COMPARISONS_CONFIG_CHECK_TIMER_DESC">
			<option
				value="-5 hours">COM_VM_PRODUCT_COMPARISONS_CONFIG_CHECK_TIMER_OPTION_ONE</option>
			<option
				value="-12 hours">COM_VM_PRODUCT_COMPARISONS_CONFIG_CHECK_TIMER_OPTION_TWO</option>
			<option
				value="-1 day">COM_VM_PRODUCT_COMPARISONS_CONFIG_CHECK_TIMER_OPTION_THREE</option>
			<option
				value="-2 day">COM_VM_PRODUCT_COMPARISONS_CONFIG_CHECK_TIMER_OPTION_FOUR</option>
			<option
				value="-1 week">COM_VM_PRODUCT_COMPARISONS_CONFIG_CHECK_TIMER_OPTION_FIVE</option>
			<option
				value="0">COM_VM_PRODUCT_COMPARISONS_CONFIG_CHECK_TIMER_OPTION_SIX</option>
		</field>
		<field type="spacer" name="spacerAuthor" hr="true" />
		<field name="autorTitle"
			type="spacer"
			label="COM_VM_PRODUCT_COMPARISONS_CONFIG_AUTHOR"
		/>
		<field name="autorName"
			type="text"
			label="COM_VM_PRODUCT_COMPARISONS_CONFIG_AUTHOR_NAME_LABEL"
			description="COM_VM_PRODUCT_COMPARISONS_CONFIG_AUTHOR_NAME_DESC"
			size="60"
			default="Nikolaychuk Oleg"
			readonly="true"
			class="readonly"
		/>
		<field name="autorEmail"
			type="email"
			label="COM_VM_PRODUCT_COMPARISONS_CONFIG_AUTHOR_EMAIL_LABEL"
			description="COM_VM_PRODUCT_COMPARISONS_CONFIG_AUTHOR_EMAIL_DESC"
			size="60"
			default="sad.net79@gmail.com"
			readonly="true"
			class="readonly"
		/>
	</fieldset>
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC">
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			validate="rules"
			filter="rules"
			component="com_vm_product_comparisons"
			section="component"
		/>
	</fieldset>
</config>