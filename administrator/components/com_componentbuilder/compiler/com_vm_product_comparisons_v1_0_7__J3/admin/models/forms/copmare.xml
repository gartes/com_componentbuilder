<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_vm_product_comparisons/models/rules"
	addfieldpath="/administrator/components/com_vm_product_comparisons/models/fields"
>
	<fieldset name="details">
		<!-- Default Fields. -->
		<!-- Id Field. Type: Text (joomla) -->
		<field
			name="id"
			type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"
		/>
		<!-- Date Created Field. Type: Calendar (joomla) -->
		<field
			name="created"
			type="calendar"
			label="COM_VM_PRODUCT_COMPARISONS_COPMARE_CREATED_DATE_LABEL"
			description="COM_VM_PRODUCT_COMPARISONS_COPMARE_CREATED_DATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<!-- User Created Field. Type: User (joomla) -->
		<field
			name="created_by"
			type="user"
			label="COM_VM_PRODUCT_COMPARISONS_COPMARE_CREATED_BY_LABEL"
			description="COM_VM_PRODUCT_COMPARISONS_COPMARE_CREATED_BY_DESC"
		/>
		<!-- Published Field. Type: List (joomla) -->
		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1" >
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<!-- Date Modified Field. Type: Calendar (joomla) -->
		<field name="modified" type="calendar" class="readonly"
			label="COM_VM_PRODUCT_COMPARISONS_COPMARE_MODIFIED_DATE_LABEL" description="COM_VM_PRODUCT_COMPARISONS_COPMARE_MODIFIED_DATE_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<!-- User Modified Field. Type: User (joomla) -->
		<field name="modified_by" type="user"
			label="COM_VM_PRODUCT_COMPARISONS_COPMARE_MODIFIED_BY_LABEL"
			description="COM_VM_PRODUCT_COMPARISONS_COPMARE_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
		<!-- Ordering Field. Type: Numbers (joomla) -->
		<field
			name="ordering"
			type="number"
			class="inputbox validate-ordering"
			label="COM_VM_PRODUCT_COMPARISONS_COPMARE_ORDERING_LABEL"
			description=""
			default="0"
			size="6"
			required="false"
		/>
		<!-- Version Field. Type: Text (joomla) -->
		<field
			name="version"
			type="text"
			class="readonly"
			label="COM_VM_PRODUCT_COMPARISONS_COPMARE_VERSION_LABEL"
			description="COM_VM_PRODUCT_COMPARISONS_COPMARE_VERSION_DESC"
			size="6"
			readonly="true"
			filter="unset"
		/>
		<!-- Dynamic Fields. -->
		<!-- Sesion_id Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="sesion_id"
			label="COM_VM_PRODUCT_COMPARISONS_COPMARE_SESION_ID_LABEL"
			maxlength="255"
			default=""
			description="COM_VM_PRODUCT_COMPARISONS_COPMARE_SESION_ID_DESCRIPTION"
			class="text_area"
			readonly="false"
			disabled="false"
			required="false"
			filter="STRING"
			message="COM_VM_PRODUCT_COMPARISONS_COPMARE_SESION_ID_MESSAGE"
			autocomplete="on"
		/>
		<!-- User_id Field. Type: User. (joomla) -->
		<field
			type="user"
			name="user_id"
			label="COM_VM_PRODUCT_COMPARISONS_COPMARE_USER_ID_LABEL"
		/>
		<!-- Virtuemart_category_id Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="virtuemart_category_id"
			label="COM_VM_PRODUCT_COMPARISONS_COPMARE_VIRTUEMART_CATEGORY_ID_LABEL"
			size="10"
			maxlength="10"
			default=""
			description="COM_VM_PRODUCT_COMPARISONS_COPMARE_VIRTUEMART_CATEGORY_ID_DESCRIPTION"
			class="text_area"
			readonly="false"
			disabled="false"
			required="false"
			filter="INT"
		/>
		<!-- Virtuemart_product_id Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="virtuemart_product_id"
			label="COM_VM_PRODUCT_COMPARISONS_COPMARE_VIRTUEMART_PRODUCT_ID_LABEL"
			maxlength="50"
			default=""
			description="COM_VM_PRODUCT_COMPARISONS_COPMARE_VIRTUEMART_PRODUCT_ID_DESCRIPTION"
			class="text_area"
			readonly="false"
			disabled="false"
			required="false"
			filter="BOOL"
		/>
	</fieldset>
	
	<!-- Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this copmare"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_vm_product_comparisons"
			section="copmare"
		/>
	</fieldset>
</form>